{
    "name": "MuK Time2Odoo",
    "version": "1.0",
    "description": "Track your times and save them in Odoo!",
    "permissions": [
        "storage",
        "identity",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "main.html",
        "default_icon": {
            "16": "img/logo16.png",
            "32": "img/logo32.png",
            "48": "img/logo48.png",
            "128": "img/logo128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "img/logo16.png",
        "32": "img/logo32.png",
        "48": "img/logo48.png",
        "128": "img/logo128.png"
    },
    "manifest_version": 2
}
